{
	"compilerOptions": {
		"baseUrl": "./src/",
		"paths": {
			"@components": ["components"],
			"@hooks": ["hooks"],
			"@utils": ["utils"],
			"@assets": ["assets"]
		},
		"jsx": "react-jsx",
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.cjs", "**/*.mjs", "prettier.config.js"]
}
